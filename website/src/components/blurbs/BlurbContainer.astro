---
import DocsBlurb from './DocsBlurb.astro';
import GithubBlurb from './GithubBlurb.astro';
import TextBlurb from './TextBlurb.astro';
import type { Blurb } from './types'

interface Props {
    blurbs: Blurb[];
}
---
<div class="blurb-container">
    <style>
        .blurb-container {
            width: 100%;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            grid-auto-flow: row;
            grid-auto-columns: 1fr;
            justify-content: start;
            grid-gap: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px 5px rgba(0, 0, 0, 0.1);
        }
    </style>
    {Astro.props.blurbs.map((blurb) => {
        switch (blurb.type) {
            case 'github':
                return <GithubBlurb {...blurb} />;
            case 'docs':
                return <DocsBlurb {...blurb} />;
            case 'text':
                return <TextBlurb {...blurb} />;
        }
    })}
</div>